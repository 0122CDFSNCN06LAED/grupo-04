<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs") %>

    <link rel="stylesheet" href="/css/home.css" />
    <title>Todos los productos</title>
</head>

<body>
    <h1>MIS PRODUCTOS FAV</h1>
    <div class="row">
        <% products.forEach(product=> { %>
    <article class="cont-card col-md-3 col-sm-6">
        <div class="card m-2">
          <a href="../../products/detail/<%= product.product_id %>">
            <div class="box-img">
              <img
                class="article-img"
                <% productosFavoritos.filter(x=>
                x.product_id==product.id){ %>
                    src="/img/articulos/<%=product.productImages%>"
                
                <% }%>
              />
            </div>
          </a>
          <div class="card-body card-description">
            <div class="d-flex justify-content-around">
              <div id="favProd">
                <% if(locals.productosFavoritos &&
                productosFavoritos.filter(x=>
                x.product_id==product.id)){ %>
                <a href="/products/favoritos/<%= product.id %>"
                  ><i class="icon-card fa-solid fa-heart fa-2x"></i
                ></a>
                <% } else{ %>
                <i
                  class="icon-card fa-solid fa-heart fa-2x selectFavorite"
                ></i>
                <% } %>
              </div>
              <p class="card-price">$ <%=product.price%></p>
              <p class="card-discount">10% off</p>
            </div>
            <div class="sub-card position-relative">
              <h3 class="card-title">
                <a href="../../products/detail/<%= product.id %>">
                  <%=product.productName%>
                </a>
              </h3>
            </div>
          </div>
        </div>
      </article>
      <% }) %>
    </div>
</body>

</html>